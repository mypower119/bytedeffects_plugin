<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.byteplus_effects_plugin">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--uses-permission android:name="android.permission.RECORD_AUDIO"/-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

<!--    android:name="com.example.byteplus_effects_plugin.app.DemoApplication"-->
    <application
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_config"
        android:resizeableActivity="false"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:largeHeap="true">

        <activity
            android:name="com.example.byteplus_effects_plugin.app.activity.PermissionsActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>

        <activity android:name="com.example.byteplus_effects_plugin.app.activity.MainActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.example.byteplus_effects_plugin.algorithm.activity.AlgorithmActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait" />

<!--        effect-->
        <activity android:name="com.example.byteplus_effects_plugin.effect.activity.BeautyActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait">


        </activity>
        <activity android:name="com.example.byteplus_effects_plugin.effect.activity.StickerActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.byteplus_effects_plugin.effect.activity.QRScanActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.byteplus_effects_plugin.effect.activity.MattingStickerActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.byteplus_effects_plugin.effect.activity.BackgroundBlurActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.byteplus_effects_plugin.effect.activity.StyleMakeUpActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.example.byteplus_effects_plugin.effect.activity.StickerTestActivity" />

        <activity android:name="com.example.byteplus_effects_plugin.lens.activity.ImageQualityActivity"
            android:configChanges="locale|layoutDirection"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.byteplus_effects_plugin.sports.SportsHomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.byteplus_effects_plugin.sports.SportsPresetActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.byteplus_effects_plugin.sports.SportsActivity" />
        <activity android:name="com.example.byteplus_effects_plugin.sports.SportsResultActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"/>
    </application>
</manifest>
