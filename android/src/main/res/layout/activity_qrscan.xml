<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.byteplus_effects_plugin.effect.view.ViewfinderView
        android:id="@+id/vfv_qr_scan"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_qr_scan_tip"
        android:text="@string/scan_qr_code"
        android:textSize="15sp"
        android:textColor="#CCFFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="600dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:src="@drawable/ic_arrow_left"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="@string/feature_qr_scan"/>
    </RelativeLayout>

    <com.example.byteplus_effects_plugin.effect.view.ProgressBar
        android:id="@+id/pb_qr_scan"
        android:visibility="gone"
        android:layout_gravity="bottom"
        app:textHeight="20dp"
        app:textSize="12sp"
        app:circleRadius="10dp"
        app:lineHeight="2dp"
        app:activeLineColor="@color/colorWhite"
        app:inactiveLineColor="@color/inactivie_progress_bg"
        android:layout_height="200dp"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_width="match_parent"/>

</FrameLayout>