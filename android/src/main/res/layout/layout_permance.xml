<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_performance"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        android:text="FPSï¼š"/>
    <TextView
        android:id="@+id/tv_fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_toRightOf="@id/title_fps"
        android:layout_alignBaseline="@id/title_fps"
        tools:text="30"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/title_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/title_fps"
        android:textSize="12dp"
        android:text="@string/render_cost"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_toRightOf="@id/title_performance"
        android:layout_alignBaseline="@id/title_performance"
        tools:text="33"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/title_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/title_performance"
        android:textSize="12dp"
        android:text="@string/input_resolution"/>
    <TextView
        android:id="@+id/tv_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_toRightOf="@id/title_resolution"
        android:layout_alignBaseline="@id/title_resolution"
        tools:text="33"
        android:textSize="12dp"/>


</RelativeLayout>