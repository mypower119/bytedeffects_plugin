<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/select_padding"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:scaleType="fitXY" />

        <com.example.byteplus_effects_plugin.effect.view.DownloadView
            android:id="@+id/dpv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignRight="@id/iv_icon"
            android:layout_alignBottom="@id/iv_icon"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            app:unreached_bar_color = "@color/unreached_bar_color"
            app:reached_bar_color = "@color/colorWhite" />

    </RelativeLayout>


<!--    <com.example.byteplus_effects_plugin.common.view.MarqueeTextView-->
<!--        android:id="@+id/tv_title"-->
<!--        android:textColor="@color/colorGrey"-->
<!--        android:gravity="top|center"-->
<!--        android:textSize="11dp"-->
<!--        android:layout_width="60dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:maxLines="2"-->
<!--        android:ellipsize="end" />-->

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@color/colorGrey"
        android:gravity="top|center"
        android:textSize="@dimen/text_title_size"
        android:layout_width="@dimen/logo_size"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/item_select_text_padding_top"/>

</LinearLayout>
