<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="radiobutton" >
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/radio_button_bg_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/radio_button_text_selector</item>

    </style>

    <!--设置Tablayout字体大小-->
    <style name="TabLayoutTextSize">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--设置Tablayout字体加粗-->
    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBg</item>
    </style>

    <style name="VersionCheckDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_brand_6</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme -->
        <item name="android:listDivider">@drawable/divider_feature_tab</item>
    </style>
    <style name="faceInfoTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="FeatureItemTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>